<div class="container">

    <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Employee Certificate Management<i class="fas fa-fire-alt"></i></h1>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <!-- Add Employee  -->
            <div class="card mb-4">
                <div class="card-header">Add Equipment</div>
                <div class="card-body">

                    <!-- Entry Form -->
                    {{#each Equipment}}
                    <form>
                        <div class="form-group">
                            <label for="employee-name-input">Equipment Type</label>
                            <input class="form-entry" id="equipment-name-type" placeholder="" type="text" value= "{{equipType}}">
                        </div>
                        <div class="form-group">
                            <label for="serial-input">Serial Number</label>
                            <input class="form-entry" id="serial-input" placeholder="" type="text" value= "{{serialNumber}}">
                        </div>
                        <div class="form-group">
                            <label for="condition-input">Condition</label>
                            <select class="form-control" id="condition-input">
                                <option>Excellent</option>
                                <option>Good</option>
                                <option>Fair</option>
                                <option>Poor</option>
                                <option>Critical</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="start-input">Service Date</label>
                            <input class="form-entry" id="Service-date-input" placeholder="" type="text" value= "{{serviceDate}}">
                        </div>
                        <div class="form-group">
                            <label for="rate-input">Expiration Date</label>
                            <input class="form-entry" id="expiration-date-input" placeholder="" type="text" value= "{{expireDate}}">
                        </div>
                        <button class="btn btn-primary float-right" id="edit-equipment-btn">Submit</button>
                    </form>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

</div>