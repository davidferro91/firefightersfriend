<div class="container">

    <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Employee Certificate Management<i class="fas fa-fire-alt"></i></h1>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <!-- Add Employee  -->
            <div class="card mb-4">
                <div class="card-header">Add Certificate</div>
                <div class="card-body">

                    <!-- Entry Form -->
                    {{#each Certification}}
                    <form>
                        <div class="form-group">
                            <label for="employee-name-input">Certificate Type</label>
                            <input class="form-entry" id="cert-type-input" placeholder="" type="text" value="{{certType}}">
                        </div>
                        <div class="form-group">
                            <label for="role-input">Date issued</label>
                            <input class="form-entry" id="date-issued-input" placeholder="" type="text" value="{{dateIssued}}">
                        </div>
                        <div class="form-group">
                            <label for="start-input">Expiration Date</label>
                            <input class="form-entry" id="expiration-date-input" placeholder="" type="text" value="{{expDate}}">
                        </div>
                        <button class="btn btn-danger ml-2 float-right" id="delete-cert-btn" data-id="{{certId}}" data-personneluid={{PersonnelUid}}>Delete</button>
                        <button class="btn btn-primary float-right" id="edit-cert-btn" data-id={{certId}} data-personneluid={{PersonnelUid}}>Submit</button>
                    </form>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <script src="/js/certs.js"></script>
</div>